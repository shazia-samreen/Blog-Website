<form action="/" method="post">
    <div class="form-group">
        <label for="newpost">Title</label>
        <input type="text" name="newpost" class="form-control">
    </div>
    <div class="form-group">
        <label for="actualpost">Post</label>
        <textarea name="actualpost" id="actualpost"  rows="3" class="form-control"></textarea>
    </div>
    <button type="submit">Publish</button>
</form>
